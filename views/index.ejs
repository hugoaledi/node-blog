<%- include('partials/header.ejs') %>
<%- include('partials/homenavbar.ejs') %>

<body>
    <div class="container">
        <br>
        <div class="jumbotron">
            <h1 class="display-4">Olá!</h1>
            <p class="lead">Blog criado para estudo de Nodejs.</p>
        </div>
        <% articles.forEach(article=>{ %>
        <div class="card">
            <div class="card-header">
                <%= article.title %>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
        </div>
        <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/2" style="float: right;">Próximo ></a>
            </div>
        </div>
        <hr>
    </div>
</body>

